<?xml version = "1.0" encoding = "utf-8"?>
<!DOCTYPE hibernate-configuration SYSTEM
        "http://www.hibernate.org/dtd/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
    <session-factory>

        <property name="hibernate.dialect">org.hibernate.dialect.SQLiteDialect</property>
        <property name="hibernate.connection.driver_class">org.sqlite.JDBC</property>
        <property name="hibernate.connection.url">jdbc:sqlite:file:./db/WorktimeDB.db</property>
        <property name="hibernate.connection.username"></property>
        <property name="hibernate.connection.password"></property>
        <property name="connection.pool_size">10</property>
        <property name="hbm2ddl.auto">create</property>
        <property name="show_sql">true</property>

        <!-- List of XML mapping files -->
        <mapping class="com.ducksonflame.worktimetracker.dto.WorktimeInDTO"/>
        <mapping class="com.ducksonflame.worktimetracker.dto.WorktimeOutDTO"/>
        <mapping class="com.ducksonflame.worktimetracker.dto.BreakDTO"/>

    </session-factory>
</hibernate-configuration>